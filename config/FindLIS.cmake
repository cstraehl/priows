FIND_LIBRARY(LIS_LIBRARY NAMES lis)
FIND_PATH(LIS_INCLUDE_DIR lis.h)

SET(LIS_FOUND FALSE)
IF(LIS_INCLUDE_DIR AND LIS_LIBRARY)
    SET(LIS_FOUND TRUE)
    IF(NOT LIS_FIND_QUIETLY)
        MESSAGE(STATUS "Found LIS")
        MESSAGE(STATUS "  > include dir: ${LIS_INCLUDE_DIR}")
        MESSAGE(STATUS "  > library:     ${LIS_LIBRARY}")
    ENDIF()
ELSE()
    IF(LIS_FIND_REQUIRED)
        MESSAGE(FATAL_ERROR "Could not find LIS")
    ENDIF()
ENDIF()
